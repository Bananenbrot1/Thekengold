%p#notice= notice
%h1 Teams
%table
  %thead
    %tr
      %th Name
      %th Gender
      %th Amount
      %th{:colspan => "3"}
  %tbody
    - @teams.each do |team|
      %tr
        %td= team.name
        %td= team.gender
        %td= team.amount
        %td= link_to 'Show', team
        %td= link_to 'Edit', edit_team_path(team)
        %td= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }
%br/
%button
  = link_to 'New Team', new_team_path
%button
  = link_to "Wertmarken erstellen", teams_path(format: 'pdf')
